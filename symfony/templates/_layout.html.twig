<!DOCTYPE html>
<html lang="fr" prefix="og: http://ogp.me/ns#">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <meta name="format-detection" content="telephone=no">
        <title>{{ titleTag|default }}</title>
        {% block meta %}
            <meta property="og:title" content="{{ (pageTemplate ~ '.ogTitle')|trans }}" />
            <meta property="og:url" content="{{ app.request.uri }}" />
            <meta property="og:description" content="{{ (pageTemplate ~ '.ogDescription')|trans }}" />
            <meta name="description" content="{{ metaDescription|default }}">
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('build/css/fonts.css') }}" type="text/css">
        <link rel="icon" href="{{ asset('build/img/header/clement.png') ~ '?' ~ date().timestamp }}" type="image/x-icon">
    </head>
    <body>
        <div id="barba-wrapper">
            <div class="barba-container" data-namespace="{{ pageTemplate }}">
                <div class="page page-{{ pageTemplate }}">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {# <script src="{{ asset('build/js/app.js') }}"></script> #}
    </body>
</html>